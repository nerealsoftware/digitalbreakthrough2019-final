<Window x:Class="WpfApp.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Ход выполнения анализа" Height="377" Width="541" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <ProgressBar Name="AllProgressBar" Height="25" Margin="10,12,10,0" VerticalAlignment="Top"/>
        <ProgressBar Name="FileProgressBar" Height="25" Margin="10,42,10,0" VerticalAlignment="Top"/>
        <Label Content="Количество обработанных файлов:" Margin="10,72,10,0" VerticalAlignment="Top" Height="29"/>
        <TextBox Name="ProgressText" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" 
                     Margin="10,101,10,10" TextWrapping="Wrap" Text="Ход выполнения анализа:" TextChanged="TextBox_TextChanged"/>
    </Grid>
</Window>
