<Window x:Class="WpfApp.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Ход выполнения анализа" Height="365" Width="425">
    <Grid>
        <ProgressBar Name="FileProgressBar" HorizontalAlignment="Left" Height="25" Margin="10,33,0,0" VerticalAlignment="Top" Width="372" Grid.ColumnSpan="2"/>
        <ProgressBar Name="AllProgressBar" HorizontalAlignment="Left" Height="25" Margin="10,80,0,0" VerticalAlignment="Top" Width="372" Grid.ColumnSpan="2"/>
        <Label Content="Количество обработанных файлов:" HorizontalAlignment="Left" Margin="10,110,0,0" VerticalAlignment="Top" Width="372" Height="29" Grid.ColumnSpan="2"/>
        <ScrollViewer Margin="10,144,10,10">
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Ход выполнения анализа" VerticalAlignment="Top" Height="180" Width="378"/>
        </ScrollViewer>
    </Grid>
</Window>
